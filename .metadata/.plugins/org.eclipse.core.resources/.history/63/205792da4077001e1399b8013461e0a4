#ifndef COTS_MCAL_SPI_SPI_CONFIG_H_
#define COTS_MCAL_SPI_SPI_CONFIG_H_

/**********************************************************/
/*
 * SPI_DISABLE
 * SPI_ENABLE
 */
#define SPI_INTERRUPT_STATUS		SPI_DISABLE
/*************************************************************/

/**************************************************************/
/*
 * SPI_MSB
 * SPI_LSB
 */
#define SPI_DATA_ORDER		SPI_MSB
/*******************************************************************/

/***************************************************************/
/*
 * SPI_CPOL_IDEAL_LOW
 * SPI_CPOL_IDEAL_HIGH
 */
#define Clock_Polarity		SPI_CPOL_IDEAL_LOW
/************************************************************************/

/********************************************************************/
/*
 * SPI_SAMPLIG_EDGE_LEADING
 * SPI_SAMPLIG_EDGE_TRAILING
 */
#define Clock_Phase			SPI_SAMPLIG_EDGE_LEADING
/**********************************************************************/

/********************************************************************/
/*
 * fosc_4
 * fosc_16
 * fosc_64
 * fosc_128
 * fosc_2
 * fosc_8
 * fosc_32
 */
#define SPI_Clock_Rate		fosc_8
/************************************************************************/

#endif /* COTS_MCAL_SPI_SPI_CONFIG_H_ */
