
#include "MemMap.h"
#include "../../LIB/Bit_Math.h"
#include "../../LIB/STD_Types.h"
#include "I2C_Interface.h"


void TWI_Init(void)
{
	//set SCL to 400kHz
	TWSR = 0x00;
	TWBR = 32; // clock 8Mhz
	//enable TWI

    //set_bit(TWCR,TWEA);
	SET_BIT(TWCR,TWEN);
}

void TWIStart(void){	/* I2C start function */
    SET_BIT(TWCR,TWSTA);
    SET_BIT(TWCR,TWINT);
    while ((TWCR & (1<<TWINT)) == 0);
}

void TWIStop(void){
	SET_BIT(TWCR,TWSTO);
	SET_BIT(TWCR,TWINT);
	while(TWCR & (1<<TWINT));
}

void TWIWrite(u8 data){
	TWDR = data;
	CLR_BIT(TWCR,TWSTA);
	SET_BIT(TWCR,TWINT);
	while ((TWCR & (1<<TWINT)) == 0);
}

u8 TWIRead_data(void){
	SET_BIT(TWCR,TWEA);
	CLR_BIT(TWCR,TWSTA);
	SET_BIT(TWCR,TWINT);
	while ((TWCR & (1<<TWINT)) == 0);
	return TWDR;
}

u8 Read_status(void){
	u8 status;
	status= TWSR & 0xF8;
	return status;
}
